<h1> Welcome to shopping Cat <%= image_tag("shopping.png", size: "64x64") %></h1>
<div class="product_list" >
  <ul>

    <% @products.each do |p| %>
      <div id= "product_<%= p.id %>" >
        <li>
          <%= "#{p.name} $#{p.price}" %>
          <div class="add_to_cart">
            <%= button_to "Add to cart", add_to_cart_path(p.id)%>
          </div>
        </li>
      </div>
    <% end %>

  </ul>
</div>
